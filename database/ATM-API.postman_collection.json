	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{TOKEN}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"const path = pm.request.url.path;",
					"",
					"if(path.length === 1 && pm.request.method === \"POST\" && path[0] === \"login\") return;",
					"",
					"const token = pm.collectionVariables.get(\"TOKEN\");",
					"const exp = pm.collectionVariables.get(\"TOKEN_EXP\");",
					"",
					"if(",
					"    token !== undefined && ",
					"    token !== \"\" && ",
					"    exp !== undefined && ",
					"    token !== \"\" &&",
					"    new Date(exp) > new Date()",
					") return;",
					"",
					"console.log(\"Get new token\");",
					"",
					"pm.sendRequest({",
					"    url: pm.collectionVariables.get(\"api_url\").replace(\"{{base_url}}\", pm.collectionVariables.get(\"base_url\")) + \"/login\",",
					"    method: \"POST\",",
					"    header: {",
					"        \"Content-Type\": \"application/x-www-form-urlencoded\"",
					"    },",
					"    body: {",
					"        mode: \"raw\",",
					"        raw: \"card_number=11111111&pin=9599\"",
					"    }",
					"}, (err, res) => {",
					"    if(err) {",
					"        console.log(err);",
					"        return;",
					"    }",
					"",
					"    const json = res.json();",
					"",
					"    if(!json.token) return;",
					"",
					"    pm.collectionVariables.set(\"TOKEN\", json.token);",
					"    let ttl = new Date();",
					"    ttl.setTime(ttl.getTime() + json.ttl * 1000);",
					"    pm.collectionVariables.set(\"TOKEN_EXP\", ttl.toISOString());",
					"});"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"const path = pm.request.url.path;",
					"",
					"if(path.length !== 2 || pm.request.method !== \"POST\" || path[0] !== \"api\" || path[1] !== \"login\") return;",
					"",
					"console.log(\"Update from manual token get\");",
					"",
					"const json = pm.response.json();",
					"",
					"if(!json.token) return;",
					"",
					"pm.collectionVariables.set(\"TOKEN\", json.token);",
					"let ttl = new Date();",
					"ttl.setTime(ttl.getTime() + json.ttl * 1000);",
					"pm.collectionVariables.set(\"TOKEN_EXP\", ttl.toISOString());"
				]
			}
		}
	],
